<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrimeReport.CrimeDetailFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentsTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="20dp"
            android:textSize="14dp" />

        <!--
        <ImageButton
            android:id="@+id/btnDelete"
            style="@style/iconImageButton"
            android:layout_margin="@dimen/small_margin"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_delete"
            android:scaleType="fitCenter"/>-->


        <ImageButton
            android:id="@+id/btnShowOptions"
            style="@style/iconImageButton"
            android:layout_margin="@dimen/small_margin"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_show_options"
            android:scaleType="fitCenter"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_below="@+id/relLayout1">


        <ImageView
            android:id="@+id/crimeImageView"
            android:layout_marginTop="0dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/datetimeTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_vertical_margin" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout2"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginBottom="120dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewComment"
            android:transcriptMode="normal">
        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/relLayout3"
        android:layout_alignParentBottom="true">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:background="@null"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:hint="Add a comment..."
            android:textSize="14sp"
            android:id="@+id/editTextComment"/>
        <Button
            android:id="@+id/btnSendComment"
            style="@style/defaultButtonStyle"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/button_horizontal_margin"
            android:text="@string/btn_send"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>