<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Mainfeed.Mainfeed_LocationFragment">

    <LinearLayout
        android:id="@+id/locationlinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/default_horizontal_margin"
        android:paddingRight="@dimen/default_horizontal_margin"
        android:paddingBottom="@dimen/default_horizontal_margin">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mainfeedMapView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:backgroundTintMode="multiply"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnViewImage"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/button_vertical_margin"
            android:background="@null"
            android:text="@string/btn_view_image"
            android:textAllCaps="false"
            android:textColor="@color/TextColorWhite" />
    </LinearLayout>

</FrameLayout>