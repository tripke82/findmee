<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".EmergencyRequests.LocationActivity">

    <LinearLayout
        android:id="@+id/locationlinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/default_horizontal_margin"
        android:paddingRight="@dimen/default_horizontal_margin"
        android:paddingBottom="@dimen/default_horizontal_margin">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="423dp"
            android:backgroundTintMode="multiply"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnViewImage"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:text="@string/btn_view_image"
            android:textAllCaps="false" />
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_vertical_margin"
            android:paddingLeft="@dimen/button_horizontal_margin"
            android:paddingRight="@dimen/button_horizontal_margin"
            android:paddingBottom="@dimen/button_vertical_margin">
            <Button
               android:id="@+id/btnCallEmergencyContact"
                style="@style/defaultButtonStyle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Call"
               android:textSize="14sp"
               android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>