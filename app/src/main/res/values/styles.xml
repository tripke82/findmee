<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainCircleButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/circle_gradient_button</item>
    </style>
    <style name="redCircleButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/circle_red_button</item>
    </style>
    <style name="defaultButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_rect_button</item>
    </style>
    <style name="defaulttextboxStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="textboxStyle">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>
    <style name="imageViewProfile">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="linearLayoutHorizontal" parent="linearLayout">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="textViewComment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="textViewMainFeed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
    <style name="textViewBottom" parent="textViewMainFeed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="imageViewBottom">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="imageViewTop">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="iconImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
